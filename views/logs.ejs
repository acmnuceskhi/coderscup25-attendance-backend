<!-- Logs View Page -->
<div class="row">
  <div class="col-md-12 mb-4">
    <div class="card">
      <div
        class="card-header bg-secondary text-white d-flex justify-content-between align-items-center"
      >
        <h5 class="mb-0">Server Logs</h5>
        <div>
          <button id="refreshLogs" class="btn btn-sm btn-outline-light">
            Refresh
          </button>
          <button
            id="clearLogsFilter"
            class="btn btn-sm btn-outline-light ms-2"
          >
            Clear Filters
          </button>
        </div>
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-3">
            <select id="logModuleFilter" class="form-select form-select-sm">
              <option value="">All Modules</option>
              <option value="Server">Server</option>
              <option value="CertGenerator">Certificate Generator</option>
              <option value="CertRoutes">Certificate Routes</option>
              <option value="MemoryMonitor">Memory Monitor</option>
              <option value="LoadTest">Load Test</option>
              <option value="ProdValidator">Production Validator</option>
            </select>
          </div>
          <div class="col-md-2">
            <select id="logLevelFilter" class="form-select form-select-sm">
              <option value="">All Levels</option>
              <option value="INFO">INFO</option>
              <option value="SUCCESS">SUCCESS</option>
              <option value="WARN">WARNING</option>
              <option value="ERROR">ERROR</option>
              <option value="DEBUG">DEBUG</option>
            </select>
          </div>
          <div class="col-md-4">
            <input
              type="text"
              id="logSearchFilter"
              class="form-control form-control-sm"
              placeholder="Search logs..."
            />
          </div>
          <div class="col-md-3">
            <select id="logFileFilter" class="form-select form-select-sm">
              <option value="">All Log Files</option>
              <!-- Log files will be populated dynamically -->
            </select>
          </div>
        </div>

        <div
          class="table-responsive"
          style="max-height: 600px; overflow-y: auto"
        >
          <table class="table table-sm table-hover table-striped">
            <thead class="table-dark sticky-top">
              <tr>
                <th style="width: 200px">Timestamp</th>
                <th style="width: 100px">Level</th>
                <th style="width: 120px">Module</th>
                <th>Message</th>
              </tr>
            </thead>
            <tbody id="logsTableBody">
              <!-- Log entries will be populated here -->
              <tr>
                <td colspan="4" class="text-center">Loading logs...</td>
              </tr>
            </tbody>
          </table>
        </div>

        <div class="mt-3">
          <div id="logsStats" class="text-muted small">
            Showing 0 of 0 log entries
          </div>
          <nav>
            <ul
              class="pagination pagination-sm justify-content-center"
              id="logsPagination"
            >
              <!-- Pagination will be populated here -->
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
</div>
